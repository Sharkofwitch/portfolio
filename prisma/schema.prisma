generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id          String    @id @default(cuid())
  src         String
  title       String?
  alt         String?
  width       Int       @default(1600)
  height      Int       @default(1067)
  year        String?
  location    String?
  camera      String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  likes       Like[]
  comments    Comment[]
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  photoId   String
  userId    String?  // Optional for now, required when auth is added
  photo     Photo    @relation(fields: [photoId], references: [id])

  @@unique([photoId, userId], name: "like_unique_constraint") // Prevents multiple likes from same user
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  userName  String   // Will be linked to User model later
  userId    String?  // Optional for now, required when auth is added
  createdAt DateTime @default(now())
  photoId   String
  photo     Photo    @relation(fields: [photoId], references: [id])
}
